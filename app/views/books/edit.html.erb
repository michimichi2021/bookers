<h1>Editing Book</h1>
<div class="form">
<%=form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
<% if @book.errors.any? %>
    <p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<p>Title</p>
<div><%=f.text_field:title %></div>
<p>Body</p>
<div><%=f.text_area:body %></div>
<div><%=f.submit 'Update Book'%></div>
<% end %>
<p><span><%=link_to "Show", book_path(@book.id) %></span>|<span><%=link_to "Back", books_path %></span></p>
</div>